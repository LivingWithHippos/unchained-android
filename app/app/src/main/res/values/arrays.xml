<?xml version="1.0" encoding="utf-8"?>
<resources>
    <array name="preloaded_fonts" translatable="false">
        <item>@font/roboto_light</item>
    </array>
    <string-array name="themes" >
        <item>@string/original</item>
        <item>@string/tropical_sunset</item>
        <item>@string/black_and_white</item>
        <item>@string/waves_01</item>
    </string-array>
    <!-- TODO: move these values to their own array, to be used across the application -->
    <string-array name="theme_values">
        <item>original</item>
        <item>tropical_sunset</item>
        <item>black_n_white</item>
        <item>waves_01</item>
    </string-array>
    <string-array name="night_mode" >
        <item>@string/automatic</item>
        <item>@string/night</item>
        <item>@string/day</item>
    </string-array>
    <string-array name="night_mode_values">
        <item>auto</item>
        <item>night</item>
        <item>day</item>
    </string-array>
    <string name="tropical_sunset" translatable="false">Tropical Sunset</string>
    <string name="player_mpv" translatable="false">MPV</string>
    <string name="player_web_video_cast" translatable="false">Web Video Cast</string>
    <string name="download_manager_okhttp" translatable="false">OkHttp</string>

    <string-array name="main_screen" >
        <item>@string/user</item>
        <item>@string/downloads</item>
        <item>@string/search</item>
    </string-array>
    <string-array name="main_screen_values">
        <item>user</item>
        <item>downloads</item>
        <item>search</item>
    </string-array>

    <string-array name="default_media_player" >
        <item>@string/player_vlc</item>
        <item>@string/player_mx</item>
        <item>@string/player_mpv</item>
        <item>@string/player_web_video_cast</item>
        <item>@string/custom_media_player</item>
    </string-array>
    <string-array name="default_media_player_values">
        <item>vlc</item>
        <item>mx_player</item>
        <item>mpv</item>
        <item>web_video_cast</item>
        <item>custom_player</item>
    </string-array>
    <string-array name="downloader">
        <item>@string/download_manager_system</item>
        <item>@string/download_manager_okhttp</item>
    </string-array>
    <string-array name="downloader_values">
        <item>download_manager_system</item>
        <item>download_manager_okhttp</item>
    </string-array>
    <string-array name="service_types">
        <item>@string/kodi</item>
        <item>@string/player_vlc</item>
        <item>@string/jackett</item>
    </string-array>
    <string-array name="search_categories">
        <item>@string/category_all</item>
        <item>@string/category_anime</item>
        <item>@string/category_art</item>
        <item>@string/category_books</item>
        <item>@string/category_doujinshi</item>
        <item>@string/category_games</item>
        <item>@string/category_manga</item>
        <item>@string/category_movies</item>
        <item>@string/category_music</item>
        <item>@string/category_pictures</item>
        <item>@string/category_software</item>
        <item>@string/category_tv</item>
        <item>@string/category_videos</item>
    </string-array>
    <string-array name="search_sorting">
        <item>@string/default_string</item>
        <item>@string/seeders</item>
        <item>@string/sort_by_size_asc</item>
        <item>@string/sort_by_size_desc</item>
        <item>@string/sort_by_az</item>
        <item>@string/sort_by_za</item>
        <item>@string/added_date</item>
    </string-array>

    <declare-styleable name="StatComponent">
        <attr name="show_dividers" format="boolean" />
        <attr name="statDirection" format="enum">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="StatItemComponent">
        <attr name="label" format="string" />
        <attr name="caption" format="string" />
        <attr name="item_content" format="string" />
        <attr name="show_label" format="boolean" />
        <attr name="show_caption" format="boolean" />
        <attr name="show_icon" format="boolean" />
        <attr name="item_icon" format="reference" />
    </declare-styleable>

</resources>
